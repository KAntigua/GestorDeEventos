@model GestorEvento.Application.DTOs.UsuarioLoginDTO


<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-center mb-4">Iniciar Sesión</h3>

            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Clave" class="form-label"></label>
                    <input asp-for="Clave" type="password" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Entrar</button>
            </form>
        </div>
    </div>
</div>