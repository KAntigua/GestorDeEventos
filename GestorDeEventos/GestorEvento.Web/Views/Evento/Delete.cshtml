@model GestorEvento.Web.Models.EventoViewModel

<div class="card text-primary shadow mt-4">
    <div class="card-header text-center bg-danger text-white">
        <h5>Eliminar Evento</h5>
    </div>

    <div class="card-body">
        <p class="text-danger fw-bold">¿Estás seguro de que deseas eliminar este evento?</p>
        <dl class="row">
            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.HoraInicio)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.HoraInicio)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.HoraFin)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.HoraFin)
            </dd>

            <dt class="col-sm-3 text-end text-dark">
                @Html.DisplayNameFor(model => model.SalaId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SalaId)
            </dd>
        </dl>
    </div>

    <div class="card-footer text-center">
        <form asp-action="Delete" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este evento?');">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger btn-sm" />
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancelar</a>
        </form>
    </div>
</div>